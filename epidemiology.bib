   journal = {Journal of the American College of Cardiology},
   keywords = {anger,implantable cardioverter-defibrillator,tachyarrhythmias (ventricular)},
   month = {3},
   pages = {774-778},
   pmid = {19245968},
   publisher = {American College of Cardiology FoundationWashington, D.C.},
   title = {Anger-Induced T-Wave Alternans Predicts Future Ventricular Arrhythmias in Patients With Implantable Cardioverter-Defibrillators},
   volume = {53},
