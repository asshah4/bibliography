doi = {10.3389/fphys.2013.00026},
file = {:Users/asshah4/OneDrive - University of Illinois at Chicago/articles/2013{\_}Billman{\_}The LFHF ratio does not accurately measure cardiac sympatho-vagal balance.pdf:pdf},
