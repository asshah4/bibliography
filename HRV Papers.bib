journal = {Frontiers in Physiology},
month = {jan},
number = {February},
pages = {26},
pmid = {23431279},
title = {{The LF/HF ratio does not accurately measure cardiac sympatho-vagal balance}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3576706{\&}tool=pmcentrez{\&}rendertype=abstract},
