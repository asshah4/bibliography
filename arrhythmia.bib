   keywords = {Atrial fibrillation,Autonomic nervous system,Ganglionated plexus},
   month = {11},
   pages = {245-252},
   publisher = {Narnia},
   title = {Autonomic mechanism for initiation of rapid firing from atria and pulmonary veins: Evidence by ablation of ganglionated plexi},
