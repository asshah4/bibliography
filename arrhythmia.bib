   keywords = {Cardiac innervation,Cardiac mapping,Heart rate,Intrinsic cardiac nervous system,Nicotine cardiac ganglionated plexus},
   pages = {55-62},
   title = {Spatially divergent cardiac responses to nicotinic stimulation of ganglionated plexus neurons in the canine heart},
