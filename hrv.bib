doi = {10.1111/j.1464-5491.1993.tb00173.x},
issn = {14645491},
journal = {Diabetic Medicine},
keywords = {Cardiovascular autonomic neuropathy,Diabetes mellitus,Mortality,QTc interval,Sudden death},
month = {nov},
