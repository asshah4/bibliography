isbn = {0033-3174},
issn = {15347796},
journal = {Psychosomatic Medicine},
keywords = {Autonomic nervous system,Coronary disease,Depression,Heart rate recovery},
number = {4},
pages = {456--460},
pmid = {18434491},
title = {{Depressive symptoms predict heart rate recovery after exercise treadmill testing in patients with coronary artery disease: Results from the psychophysiological investigations of myocardial ischemia study}},
volume = {70},
year = {2008}
