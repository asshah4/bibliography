keywords = {Autonomic nervous system,Infarction,Ion channels,Remodeling,Sudden death,Ventricular arrhythmias},
month = {may},
number = {2},
pages = {409--416},
pmid = {11334845},
title = {{Sympathetic nerve sprouting, electrical remodeling and the mechanisms of sudden cardiac death}},
