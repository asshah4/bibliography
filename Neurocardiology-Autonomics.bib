issn = {09301038},
journal = {Surgical and Radiologic Anatomy},
keywords = {Cardiac ramus,Cervical ganglia,Heart,Innervation,Thoracic ganglia},
number = {3-4},
pages = {210--215},
title = {{The sympathetic contributions to the cardiac plexus}},
