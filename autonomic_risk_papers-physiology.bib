keywords = {dorsal root ganglion afferent,intrinsic cardiac nervous system,local circuit neurone,myocardial ischemia,neurone,nodose ganglion afferent,parasympathetic efferent neurone,sympathetic efferent neurone},
month = {dec},
number = {12},
