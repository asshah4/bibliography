isbn = {0002-9513},
issn = {0363-6135},
journal = {AJP: Heart and Circulatory Physiology},
number = {1},
pages = {H474--H480},
pmid = {17993598},
title = {{Impaired serotonergic regulation of heart rate may underlie reduced baroreflex sensitivity in an animal model of depression}},
