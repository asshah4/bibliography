doi = {10.4330/wjc.v9.i6.508},
file = {:C$\backslash$:/Users/asshah4/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Kingma, Simard, Rouleau - 2017 - Influence of cardiac nerve status on cardiovascular regulation and cardioprotection.pdf:pdf},
