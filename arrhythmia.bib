   isbn = {0140-6736},
   issn = {01406736},
   issue = {9101},
   journal = {Lancet},
   month = {2},
   pages = {478-484},
   pmid = {9482439},
   publisher = {Elsevier},
   title = {Baroreflex sensitivity and heart-rate variability in prediction of total cardiac mortality after myocardial infarction},
