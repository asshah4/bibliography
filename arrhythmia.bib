   journal = {Circulation},
   keywords = {T-wave alternans,implantable cardioverter defibrillator,tachyarrhythmias},
   month = {3},
   pages = {1052-1060},
   pmid = {21357826},
   publisher = {Lippincott Williams & Wilkins Hagerstown, MD},
   title = {Intracardiac electrogram T-wave alternans/variability increases before spontaneous ventricular tachyarrhythmias in implantable cardioverter- defibrillator patients: A prospective, multi-center study},
   volume = {123},
