   keywords = {Anesthetic techniques: epidural,Complications: hypoxemia,Hormones: vasopressin (ADH),Renin,Sympathetic nervous system: sympathectomy,Ventilation: hypoxemia,catecholamines,response},
   pages = {134-144},
   pmid = {2404425},
   publisher = {Anesthesiology},
   title = {Sympathetic blockade by epidural anesthesia attenuates the cardiovascular response to severe hypoxemia},
