   publisher = {American Society for Clinical Investigation},
   title = {Phosphorylation of the ryanodine receptor mediates the cardiac fight or flight response in mice},
   volume = {120},
   url = {http://www.ncbi.nlm.nih.gov/pubmed/21099118 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC2993575},
