keywords = {Anatomy, human,Autonomic ganglia,Heart innervation,Intracardiac neurons,Intrinsic neural plexus},
month = {aug},
number = {4},
pages = {353--382},
publisher = {John Wiley & Sons, Ltd},
title = {{Morphology, distribution, and variability of the epicardiac neural ganglionated subplexuses in the human heart}},
url = {http://doi.wiley.com/10.1002/1097-0185%2820000801%29259%3A4%3C353%3A%3AAID-AR10%3E3.0.CO%3B2-R},
