   url = {http://www.ncbi.nlm.nih.gov/pubmed/6149314 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC1193508 http://doi.wiley.com/10.1113/jphysiol.1984.sp015436},
