   issn = {01651838},
   issue = {3},
   journal = {Journal of the Autonomic Nervous System},
   keywords = {Cardiac innervation,Middle cervical ganglion,Norepinephrine,Postganglionic fiber,Retrograde tracer,Stellate ganglion,Sympathetic nerve},
