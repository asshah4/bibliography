file = {:Users/shahbook/Library/Application Support/Mendeley Desktop/Downloaded/Huang et al. - 2018 - Association of Depressive Symptoms and Heart Rate Variability in Vietnam War–Era Twins.pdf:pdf},
issn = {2168-622X},
journal = {JAMA Psychiatry},
keywords = {depressive disorders,dysautonomia,heart rate variability,twins,veterans},
month = {may},
title = {{Association of Depressive Symptoms and Heart Rate Variability in Vietnam War–Era Twins}},
url = {http://archpsyc.jamanetwork.com/article.aspx?doi=10.1001/jamapsychiatry.2018.0747},
