url = {http://circ.ahajournals.org/ https://www.ahajournals.org/doi/10.1161/01.CIR.52.4.578 https://scholar.google.com/scholar?hl=en&as_sdt=0%2C11&q=The+effect+of+vagus+nerve+stimulation+upon+vulnerability+of+the+canine+ventricle&btnG=},
