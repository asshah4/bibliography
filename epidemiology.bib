   issue = {1},
   journal = {Annals of noninvasive electrocardiology : the official journal of the International Society for Holter and Noninvasive Electrocardiology, Inc},
   pages = {60-68},
   title = {Heart Rate Variability Density Analysis (Dyx) and Prediction of Long-Term Mortality after Acute Myocardial Infarction.},
   volume = {21},
