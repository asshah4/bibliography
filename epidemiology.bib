   month = {1},
   pages = {22-29},
   pmid = {21903199},
   publisher = {NIH Public Access},
   title = {Association of somatic and cognitive depressive symptoms and biomarkers in acute myocardial infarction: Insights from the translational research investigating underlying disparities in acute myocardial infarction patients' health status registry},
   volume = {71},
