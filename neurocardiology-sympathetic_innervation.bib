issn = {00223751},
number = {17},
pages = {4073--4085},
pmid = {23878363},
title = {{Myths and realities of the cardiac vagus}},
url = {https://www-ncbi-nlm-nih-gov.proxy.library.emory.edu/pmc/articles/PMC3779103/pdf/tjp0591-4073.pdf},
