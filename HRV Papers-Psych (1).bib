isbn = {1097-6744 (Electronic) 0002-8703 (Linking)},
issn = {00028703},
journal = {American Heart Journal},
number = {4},
pmid = {18926158},
title = {{Decreased heart rate variability is associated with higher levels of inflammation in middle-aged men}},
volume = {156},
year = {2008}
