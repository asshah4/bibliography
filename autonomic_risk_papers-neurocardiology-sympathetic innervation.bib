issn = {14697580},
journal = {Journal of Anatomy},
keywords = {CGRP,Choline acetyltransferase,Electron microscopy,Heart ventricles,Innervation,PGP 9.5,Rabbit,SP,Tyrosine hydroxylase,nNOS},
number = {1},
pages = {26--46},
title = {{Innervation of the rabbit cardiac ventricles}},
url = {https://www-ncbi-nlm-nih-gov.proxy.library.emory.edu/pmc/articles/PMC4694158/pdf/JOA-228-026.pdf},
volume = {228},
