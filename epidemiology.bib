   issue = {12},
   journal = {Europace},
   keywords = {Acute myocardial infarction,CARISMA,Cardiovascular risk,Heart rate variability,Malignant arrhythmias,Multipole analysis},
   pages = {1848-1854},
   pmid = {25755288},
   title = {Heart rate variability density analysis (Dyx) for identification of appropriate implantable cardioverter defibrillator recipients among elderly patients with acute myocardial infarction and left ventricular systolic dysfunction},
