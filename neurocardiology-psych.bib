keywords = {BDNF-TrkB,Monoamines,TRD,VNS},
month = {jul},
number = {3},
pages = {716--727},
publisher = {Springer New York LLC},
title = {{Vagal Nerve Stimulation for Treatment-Resistant Depression}},
volume = {14},
year = {2017}
}
