journal = {World Journal of Cardiology},
keywords = {Autonomic neuropathy,Coronary blood flow regulation,Intrinsic cardiac nervous system,Ischemic conditioning,Myocardial ischemia},
number = {6},
pages = {508},
title = {{Influence of cardiac nerve status on cardiovascular regulation and cardioprotection}},
url = {http://www.f6publishing.com},
volume = {9},
year = {2017}
