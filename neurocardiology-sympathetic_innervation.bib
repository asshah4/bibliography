pages = {H26--H35},
pmid = {3394822},
title = {{Effects of ischemia on cardiac afferent sympathetic and vagal reflexes in dog}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/3394822 http://www.physiology.org/doi/10.1152/ajpheart.1988.255.1.H26},
