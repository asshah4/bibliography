keywords = {Achievement stress,IFG,Insula,Pain,Social exclusion,Striatum},
month = {oct},
pages = {235--251},
pmid = {26123376},
publisher = {NIH Public Access},
title = {{Psychosocial versus physiological stress - Meta-analyses on deactivations and activations of the neural correlates of stress reactions}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/26123376 http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=PMC4564342},
volume = {119},
