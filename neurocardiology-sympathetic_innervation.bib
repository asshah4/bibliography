file = {::},
issn = {00097330},
journal = {Circulation Research},
number = {1},
pages = {100--110},
title = {{Effects of sympathetic and vagal nerves on recovery properties of the endocardium and epicardium of the canine left ventricle}},
url = {http://ahajournals.org},
volume = {46},
year = {1980}
}
