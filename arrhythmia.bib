   issn = {0363-6135},
   issue = {4},
   journal = {American Journal of Physiology-Heart and Circulatory Physiology},
   keywords = {autonomic,heart rate,parasympathetic,sympathetic},
   month = {4},
   pages = {H1273-H1280},
   title = {Sympathovagal balance: how should we measure it?},
