doi = {10.1016/j.pnpbp.2006.08.015},
file = {:Users/shahbook/Box Sync/Mendeley_Articles//2007 - Davydov et al. - Baroreflex mechanisms in major depression.pdf:pdf},
isbn = {0278-5846},
