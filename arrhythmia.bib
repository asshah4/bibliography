   keywords = {*Circadian Rhythm,80 and over,Adult,Aged,Aspirin/*therapeutic use,Humans,Male,Middle Aged,Myocardial Infarction/*physiopathology/prevention,Randomized Controlled Trials as Topic},
   month = {9},
   pages = {897-902},
   pmid = {2203556},
   publisher = {American Heart Association, Inc.},
   title = {Circadian variation of acute myocardial infarction and the effect of low-dose aspirin in a randomized trial of physicians},
