pmid = {10666065},
title = {{Regulation of myocardial blood flow response to mental stress in healthy individuals}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/10666065 http://www.physiology.org/doi/10.1152/ajpheart.2000.278.2.H360},
