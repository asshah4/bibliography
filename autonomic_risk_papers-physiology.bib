journal = {Cardiovascular Research},
keywords = {Atrophy,Cardiac remodelling,Sympathetic nervous system,Ubiquitin-proteasome system,$\beta$-adreoceptors},
number = {2},
pages = {240--250},
title = {{Cardiac sympathetic neurons provide trophic signal to the heart via $\beta$2-adrenoceptor-dependent regulation of proteolysis}},
